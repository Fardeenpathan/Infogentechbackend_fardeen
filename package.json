{
  "name": "contact-form-backend",
  "version": "1.0.0",
  "description": "Contact form backend with admin panel APIs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:monitor": "pm2 monit",
    "pm2:logs": "pm2 logs",
    "docker:build": "docker build -t adminpanel-api .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "docker:test": "docker-compose up -d && timeout 10 && curl http://localhost:5000/health",
    "pm2:test": "npm run pm2:start && timeout 5 && curl http://localhost:5000/health",
    "render:deploy": "npm install && npm run build",
    "build": "echo 'Build completed - API ready for deployment'",
    "setup:admin": "node scripts/createAdmin.js",
    "logs:create": "mkdir -p logs"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.4",
    "pm2": "^5.3.0",
    "slugify": "^1.6.6",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "contact-form",
    "admin-panel",
    "nodejs",
    "mongodb",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}
